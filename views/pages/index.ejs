<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>
<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
		<div class="jumbotron">
			<h2 class="mt-2">Join our Newsletter</h2>
			<form class="form-horizontal" role="form" style="width: 100%;" action="http://localhost:8080/" method="post">
				<div class="form-group">
					<label for="email" class="col-sm-1 control-label">Email:</label>
					<div class="col-sm-10">
						<input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" value="">
					</div>
				</div>
				<p>
					<input id="submit" name="submit" type="submit" value="Send" class="btn btn-primary">
				</p>
			</form>
			<div class="row">
				<div class="col-sm-7">
					<h2 class="mt-1">Top Users</h2>
					<form class="form-horizontal" role="form" style="width: 40%;" action="http://localhost:8080/" method="post">
						<!--input hidden id="users" name="users" value = "</%= users %/>"-->

                        <%var i = 1; %>
                        <%topUsers.sort(function(a, b){%>
                        <%return b.points - a.points;%>
                        <%});%>
                        <%topWords.sort(function(a, b){%>
                        <%return b.totalPoints - a.totalPoints;%>
                        <%});%>
                        <%while (i <= 10) { %>
						<%if(topUsers[i-1] == undefined) break;%>
                        <%= i%>: <%=topUsers[i-1].username%><br>&emsp;Total Points: <%=topUsers[i-1].points%><br>
                        <% i++ }%>
					</form>
				</div>
				<div class="col-sm-5">
					<h2 class="mt-1">Top Words</h2>
					<form class="form-horizontal" role="form" style="width: 50%;" action="http://localhost:8080/" method="post">
						<!--input hidden id="words" name="words" value = "</%= words %/>"-->

                        <%var i = 1; %>

                        <%while (i <= 10) { %>
                        <%if(topWords[i-1] == undefined) break;%>
                        <%= i%>: <%=topWords[i-1].word%><br>&emsp;Total Points: <%=topWords[i-1].totalPoints%><br>
                        <% i++ }%>
					</form>
				</div>
			</div>
		</div>

	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>